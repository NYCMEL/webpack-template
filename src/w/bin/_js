#!/bin/sh env tclkit

cd $root/src/w/bin

################################################################################
#### wc.js
################################################################################
set jfiles [subst {
    $root/node_modules/jquery/dist/jquery.js
    $root/node_modules/jquery.cookie/jquery.cookie.js

    ../js/ext/wc.js
    ../js/ext/tk.js
    ../js/ext/yepnope.js
    ../js/ext/wc.utils.js
    ../js/ext/publish.js
}]

puts "making wc.js ..."
regsub -all "\\n" $jfiles "" jfiles
eval exec cat $jfiles > ../dist/wc.js

puts "ENDED."
