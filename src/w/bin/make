#!/usr/bin/env tclkit

set root   "/Melify/tools/orion/webpack"
set cmnd   [lindex $argv 0]
set item   [lindex $argv 1]

################################################################################
####
################################################################################
if {($argc == 0) || $argc > 3} {
    puts "COMMAND USAGE:"
    puts "\t make es5"
    puts "\t make mc  <component-name>"
    puts "\t make doc"
    puts "\t make all"

    puts "\nBAD COMMAND"
    exit
}

set cmnd   [lindex $argv 0]
set item   [lindex $argv 1]
set folder [lindex $argv 2]

puts "LOADING $cmnd NOW ..."
source ./_$cmnd
