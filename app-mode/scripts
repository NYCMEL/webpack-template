# -*- mode: snippet -*-
# name: app-scripts
# key: app
# --
<script>
 setTimeout(function(){
     $(".app-header .nav-link").on("click", function() {
	 $(".nav-link").parent().removeClass("active")
	 $(this).parent().addClass("active");

	 $(".app-page").hide(0, () => {
	    let id = $(this).attr("pid")
	    $(id).show();
	 });
     });
 }, 1000);
</script>