	<script>
	 setTimeout(function(){
	     $("wc-app .nav-link").on("click", function() {
		 $("wc-app .nav-link").parent().removeClass("active")
		 $(this).parent().addClass("active");

		 $("wc-app wc-app-page").hide(0, () => {
		     let pid = $(this).attr("pid");
		     
