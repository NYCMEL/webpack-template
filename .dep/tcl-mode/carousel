	li data-target="#${1:my-carousel}" data-slide-to="1" ""
    }

    division class="carousel-inner" role="listbox" {
	division class="carousel-item active" {
	    put [img "/tk/img/common/placeholder.png" class="d-block w-100" data-holder-rendered="true" height="400"]
	    division class="carousel-caption d-none d-md-block" {
		h3 "First slide label"
		p "Nulla vitae elit libero, a pharetra augue mollis interdum."
	    }
	}

	division class="carousel-item" {
	    put [img "/tk/img/common/placeholder.png" class="d-block w-100" data-holder-rendered="true" height="400"]

	    division class="carousel-caption d-none d-md-block" {
		h3 "Second slide label"
		p "Lorem ipsum dolor sit amet, consectetur adipiscing elit."
	    }
	}
    }
    
    put {
	<a class="carousel-control-prev" href="#${1:my-carousel}" role="button" data-slide="prev">
	<span class="carousel-control-prev-icon" aria-hidden="true"></span>
	<span class="sr-only">Previous</span>
