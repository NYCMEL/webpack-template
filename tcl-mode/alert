# -*- mode: snippet -*-
# name: t-alert
# key: t
# --
division class="alert alert-${1:warning} ${2:alert-dismissible} fade show" role="alert" {
    h4 class="alert-heading" "${3:Well done!}"

    put {
	<button type="button" class="close" data-dismiss="alert" aria-label="Close">
	<span aria-hidden="true">&times;</span>
	</button>
    }

    put "${4:your alert text goes here}"
}